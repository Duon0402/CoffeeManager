<Window x:Class="CoffeeManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeManager.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Hello" 
                   FontSize="50"
                   Foreground="White" MouseMove="TextBlock_MouseMove" MouseLeave="TextBlock_MouseLeave"
                   Background="Red"
                   Height="100"
                   Width="auto"
                   TextAlignment="Center" 
                   />

        <Button Height="50px"
                Width="50px"
                VerticalAlignment="Bottom"
                Background="Green"
                Foreground="White" MouseDoubleClick="Button_MouseDoubleClick">
            Click Me!!!
        </Button>
    </Grid>
</Window>
